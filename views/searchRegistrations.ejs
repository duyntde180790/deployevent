<%- include('partials/adminNav') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Registrations</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
      body {
        min-height: 100vh;
        background: linear-gradient(135deg, #a4508b 0%, #5f0a87 100%);
      }
      .search-card {
        background: rgba(255,255,255,0.95);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        padding: 2rem 2rem 1.5rem 2rem;
        margin-top: 2rem;
        border: 1px solid rgba(255,255,255,0.18);
      }
      .search-title {
        color: #5f0a87;
        font-weight: 700;
        letter-spacing: 1px;
        text-align: center;
        margin-bottom: 1.5rem;
      }
      .btn-gradient {
        background: linear-gradient(90deg, #a4508b 0%, #5f0a87 100%);
        border: none;
        color: #fff;
        font-weight: 600;
        transition: background 0.3s;
      }
      .btn-gradient:hover {
        background: linear-gradient(90deg, #5f0a87 0%, #a4508b 100%);
        color: #fff;
      }
    </style>
</head>
<body>
    <div class="container">
        <div class="search-card">
            <h2 class="search-title">Search Registrations by Date</h2>
            <form method="GET" action="/admin/search-registrations">
                <div class="row mb-3">
                    <div class="col">
                        <label for="start" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="start" name="start" required>
                    </div>
                    <div class="col">
                        <label for="end" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="end" name="end" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient">Search</button>
            </form>
            <% if (registrations && registrations.length > 0) { %>
            <table class="table table-bordered mt-4">
                <thead>
                    <tr>
                        <th>Registration ID</th>
                        <th>Student ID</th>
                        <th>Event</th>
                        <th>Registration Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% registrations.forEach(reg => { %>
                    <tr>
                        <td><%= reg._id %></td>
                        <td><%= reg.studentId.username || reg.studentId %></td>
                        <td><%= reg.eventId.name || reg.eventId %></td>
                        <td><%= new Date(reg.registrationDate).toLocaleString() %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else if (typeof registrations !== 'undefined') { %>
                <div class="alert alert-info mt-4">No registrations found for the selected date range.</div>
            <% } %>
        </div>
    </div>
</body>
</html> 