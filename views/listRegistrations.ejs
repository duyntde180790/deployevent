<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Registrations</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
      body {
        min-height: 100vh;
        background: linear-gradient(135deg, #a4508b 0%, #5f0a87 100%);
      }
      .reg-card {
        background: rgba(255,255,255,0.95);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        padding: 2rem 2rem 1.5rem 2rem;
        margin-top: 2rem;
        border: 1px solid rgba(255,255,255,0.18);
      }
      .reg-title {
        color: #5f0a87;
        font-weight: 700;
        letter-spacing: 1px;
        text-align: center;
        margin-bottom: 1.5rem;
      }
      .btn-gradient {
        background: linear-gradient(90deg, #a4508b 0%, #5f0a87 100%);
        border: none;
        color: #fff;
        font-weight: 600;
        transition: background 0.3s;
      }
      .btn-gradient:hover {
        background: linear-gradient(90deg, #5f0a87 0%, #a4508b 100%);
        color: #fff;
      }
    </style>
</head>
<body>
    <%- include('partials/adminNav') %>
    <div class="container">
        <div class="reg-card">
            <h2 class="reg-title">Event Registrations</h2>
            <% if (registrations.length === 0) { %>
                <div class="alert alert-info">No students have registered yet</div>
                <a href="/admin/create-event" class="btn btn-gradient mt-3">Create Event</a>
            <% } else { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Registration ID</th>
                        <th>Student ID</th>
                        <th>Event</th>
                        <th>Registration Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% registrations.forEach(reg => { %>
                    <tr>
                        <td><%= reg._id %></td>
                        <td><%= reg.studentId && reg.studentId.username ? reg.studentId.username : (reg.studentId ? reg.studentId : 'N/A') %></td>
                        <td><%= reg.eventId && reg.eventId.name ? reg.eventId.name : (reg.eventId ? reg.eventId : 'N/A') %></td>
                        <td><%= new Date(reg.registrationDate).toLocaleString() %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
</body>
</html> 