<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách đăng ký</title>
    <%- include('partials/style.ejs') %>
</head>
<body>
    <div class="header">Hệ thống sự kiện - Quản trị viên</div>
    <%- include('partials/adminNav') %>
    <div class="container">
        <h2 style="text-align:center; margin-bottom: 24px;">Danh sách đăng ký sự kiện</h2>
        <% if (registrations.length === 0) { %>
            <div class="alert">Chưa có sinh viên nào đăng ký</div>
            <a href="/admin/create-event" class="btn">Tạo sự kiện mới</a>
        <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Mã đăng ký</th>
                    <th>Mã sinh viên</th>
                    <th>Sự kiện</th>
                    <th>Ngày đăng ký</th>
                </tr>
            </thead>
            <tbody>
                <% registrations.forEach(reg => { %>
                <tr>
                    <td><%= reg._id %></td>
                    <td><%= reg.studentId && reg.studentId.username ? reg.studentId.username : (reg.studentId ? reg.studentId : 'N/A') %></td>
                    <td><%= reg.eventId && reg.eventId.name ? reg.eventId.name : (reg.eventId ? reg.eventId : 'N/A') %></td>
                    <td><%= new Date(reg.registrationDate).toLocaleString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>
    </div>
</body>
</html> 