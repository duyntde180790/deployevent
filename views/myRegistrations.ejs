<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Event Registrations</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
      body {
        min-height: 100vh;
        background: linear-gradient(135deg, #a4508b 0%, #5f0a87 100%);
      }
      .myreg-card {
        background: rgba(255,255,255,0.95);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        padding: 2rem 2rem 1.5rem 2rem;
        margin-top: 2rem;
        border: 1px solid rgba(255,255,255,0.18);
      }
      .myreg-title {
        color: #5f0a87;
        font-weight: 700;
        letter-spacing: 1px;
        text-align: center;
        margin-bottom: 1.5rem;
      }
      .btn-gradient {
        background: linear-gradient(90deg, #a4508b 0%, #5f0a87 100%);
        border: none;
        color: #fff;
        font-weight: 600;
        transition: background 0.3s;
      }
      .btn-gradient:hover {
        background: linear-gradient(90deg, #5f0a87 0%, #a4508b 100%);
        color: #fff;
      }
      .btn-cancel {
        background: #e74c3c;
        border: none;
        color: #fff;
        font-weight: 600;
        transition: background 0.3s;
      }
      .btn-cancel:hover {
        background: #c0392b;
        color: #fff;
      }
    </style>
</head>
<body>
    <%- include('partials/studentNav') %>
    <div class="container">
        <div class="myreg-card">
            <h2 class="myreg-title">My Event Registrations</h2>
            <% if (typeof message !== 'undefined') { %>
                <div class="alert alert-info"><%= message %></div>
            <% } %>
            <% if (registrations.length === 0) { %>
                <div class="alert alert-warning">You haven't registered for any events yet.</div>
            <% } else { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Registration Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% registrations.forEach(reg => { %>
                    <tr>
                        <td>
                          <% if (reg.eventId) { %>
                            <a href="/event/<%= reg.eventId._id %>"><%= reg.eventId.name %></a>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                        <td>
                          <% if (reg.eventId && reg.eventId.date) { %>
                            <%= new Date(reg.eventId.date).toLocaleString() %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                        <td>
                          <% if (reg.eventId && reg.eventId.location) { %>
                            <%= reg.eventId.location %>
                          <% } else { %>
                            N/A
                          <% } %>
                        </td>
                        <td><%= new Date(reg.registrationDate).toLocaleString() %></td>
                        <td>
                            <form method="POST" action="/cancel-registration/<%= reg._id %>?_method=DELETE">
                                <button type="submit" class="btn btn-cancel btn-sm">Cancel</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
</body>
</html> 